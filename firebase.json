{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination" : "/news/1",
        "type" : 301
      }
    ],
    "rewrites": [
      {
        "source": "/@(news|newest|show|ask|jobs|item|user)/*",
        "function": "app"
      }
    ]
  }
}
