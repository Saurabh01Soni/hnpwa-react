{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "scripthost"
    ],
    "paths": {
      "assets/*": ["app/assets/*"],
      "components/*": ["app/components/*"],
      "containers/*": ["app/containers/*"],
      "pages/*": ["app/pages/*"],
      "store/*": ["app/store/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "app"
  ],
  "compileOnSave": false
}
